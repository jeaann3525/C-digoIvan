package crud.Cliente;

import java.util.Scanner;

import dao.DAO;
import model.Cadastro;

public class UpdateCliente {

    public static void executar(Scanner scanner) {
        int opcao;

        do {
            System.out.println("\n========== MENU DE ATUALIZA√á√ÉO DE CLIENTES ==========");
            System.out.println("1 - Buscar cliente por nome");
            System.out.println("2 - Buscar cliente por CPF");
            System.out.println("3 - Listar todos os clientes");
            System.out.println("4 - Atualizar cliente por ID");
            System.out.println("5 - Atualizar plano de treino");
            System.out.println("0 - Voltar ao menu anterior");
            System.out.print("Escolha uma op√ß√£o: ");

            try {
                opcao = Integer.parseInt(scanner.nextLine());

                switch (opcao) {
                    case 1:
                        ReadCliente.buscarPorNome(scanner);
                        break;
                    case 2:
                        ReadCliente.buscarPorCPF(scanner);
                        break;
                    case 3:
                        ReadCliente.listarTodosComPaginacao(scanner);
                        break;
                    case 4:
                        atualizarCliente(scanner);
                        break;
                    case 5:
                        atualizarPlanoCliente(scanner);
                        break;
                    case 0:
                        System.out.println("‚Ü© Retornando ao menu anterior...");
                        break;
                    default:
                        System.out.println("‚ùå Op√ß√£o inv√°lida. Tente novamente.");
                }
            } catch (NumberFormatException e) {
                System.out.println("‚ùå Entrada inv√°lida. Digite apenas n√∫meros.");
                opcao = -1;
            }

        } while (opcao != 0);
    }

    private static void atualizarCliente(Scanner scanner) {
        DAO<Cadastro> dao = new DAO<>(Cadastro.class);
        Cadastro cliente = null;
        Long id = null;

        // Loop para garantir que o ID exista ou o usu√°rio queira sair
        while (cliente == null) {
            System.out.print("Digite o ID do cliente que deseja atualizar (ou 0 para voltar): ");
            try {
                id = Long.parseLong(scanner.nextLine());
                if (id == 0) {
                    System.out.println("‚Ü© Voltando ao menu anterior...");
                    return;
                }
                cliente = dao.obterPorID(id);
                if (cliente == null) {
                    System.out.println("‚ùå Cliente com ID " + id + " n√£o encontrado. Tente novamente.");
                }
            } catch (NumberFormatException e) {
                System.out.println("‚ùå ID inv√°lido. Digite um n√∫mero v√°lido.");
            }
        }

        System.out.println("\nCliente encontrado:");
        System.out.println(cliente);

        System.out.println("\nQuais campos deseja atualizar?");
        System.out.println("Digite os n√∫meros separados por v√≠rgula, ou '0' para atualizar todos:");
        System.out.println("1 - Nome");
        System.out.println("2 - CPF");
        System.out.println("3 - Telefone");
        System.out.println("4 - Endere√ßo");
        System.out.println("5 - Plano de treino");
        System.out.print("Op√ß√µes: ");
        String opcao = scanner.nextLine();

        boolean atualizarTodos = opcao.trim().equals("0");

        if (atualizarTodos || opcao.contains("1")) {
            System.out.print("Novo nome: ");
            String novoNome = scanner.nextLine();
            cliente.setNome(novoNome);
        }

        if (atualizarTodos || opcao.contains("2")) {
            System.out.print("Novo CPF: ");
            String novoCPF = scanner.nextLine();
            cliente.setCpf(novoCPF);
        }

        if (atualizarTodos || opcao.contains("3")) {
            System.out.print("Novo telefone: ");
            String novoTelefone = scanner.nextLine();
            cliente.setTelefone(novoTelefone);
        }

        if (atualizarTodos || opcao.contains("4")) {
            System.out.print("Novo endere√ßo: ");
            String novoEndereco = scanner.nextLine();
            cliente.setEndereco(novoEndereco);
        }
        
        if (atualizarTodos || opcao.contains("5")) {
            String novoPlano = selecionarPlano(scanner);
            cliente.setPlano(novoPlano);
        }

        dao.atualizarTransacional(cliente);
        System.out.println("\n‚úÖ Cliente atualizado com sucesso!");
        System.out.println("Novo estado do cliente:");
        System.out.println(cliente);

        dao.fecharEm();
    }
    
    private static void atualizarPlanoCliente(Scanner scanner) {
        DAO<Cadastro> dao = new DAO<>(Cadastro.class);
        Cadastro cliente = null;
        Long id = null;

        // Loop para garantir que o ID exista ou o usu√°rio queira sair
        while (cliente == null) {
            System.out.print("Digite o ID do cliente que deseja atualizar o plano (ou 0 para voltar): ");
            try {
                id = Long.parseLong(scanner.nextLine());
                if (id == 0) {
                    System.out.println("‚Ü© Voltando ao menu anterior...");
                    return;
                }
                cliente = dao.obterPorID(id);
                if (cliente == null) {
                    System.out.println("‚ùå Cliente com ID " + id + " n√£o encontrado. Tente novamente.");
                }
            } catch (NumberFormatException e) {
                System.out.println("‚ùå ID inv√°lido. Digite um n√∫mero v√°lido.");
            }
        }

        System.out.println("\nCliente encontrado:");
        System.out.println("Nome: " + cliente.getNome());
        System.out.println("Plano atual: " + (cliente.getPlano() != null ? cliente.getPlano() : "Nenhum"));
        
        String novoPlano = selecionarPlano(scanner);
        cliente.setPlano(novoPlano);

        dao.atualizarTransacional(cliente);
        System.out.println("\n‚úÖ Plano de treino atualizado com sucesso!");
        System.out.println("Novo plano: " + cliente.getPlano());

        dao.fecharEm();
    }
    
    private static String selecionarPlano(Scanner scanner) {
        System.out.println("\nüìã Selecione o plano de treino:");
        System.out.println("1 - Plano de Emagrecimento");
        System.out.println("2 - Plano de Body Builder");
        System.out.println("3 - Plano de Fortalecimento");
        System.out.println("0 - Remover plano");
        System.out.print("Escolha uma op√ß√£o: ");
        
        try {
            int opcao = Integer.parseInt(scanner.nextLine());
            
            switch (opcao) {
                case 1:
                    return "Plano de Emagrecimento";
                case 2:
                    return "Plano de Body Builder";
                case 3:
                    return "Plano de Fortalecimento";
                case 0:
                    return null;
                default:
                    System.out.println("‚ùå Op√ß√£o inv√°lida. O plano permanecer√° inalterado.");
                    return null;
            }
        } catch (NumberFormatException e) {
            System.out.println("‚ùå Entrada inv√°lida. O plano permanecer√° inalterado.");
            return null;
        }
    }
}
